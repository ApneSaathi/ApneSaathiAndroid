<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.passwordset.SetPasswordActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="Complete your verification"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_14" />

    <TextView
        android:id="@+id/Txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_5"
        android:text="Please set your password for your account" />

    <TextView
        android:id="@+id/Txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_3"
        android:text="+91 9673346489" />
    <LinearLayout
        android:layout_below="@id/Txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dimen_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Editpassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_13"
            android:gravity="center"
            android:hint="Password"
            android:inputType="number"
            android:maxLength="10"
            android:padding="@dimen/dimen_5"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EditNewPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center"
            android:hint="Re-enter password"
            android:inputType="number"
            android:maxLength="10"
            android:padding="@dimen/dimen_5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BtnLogin"
            android:layout_width="150dp"

            android:layout_height="@dimen/view_size_45"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@drawable/button_background"
            android:text="done"
            android:textSize="@dimen/text_14"
            android:textColor="@color/color_white" />

    </LinearLayout>
</RelativeLayout>