<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <include layout="@layout/include_appbar_layout_with_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:paddingBottom="@dimen/dimen_30"
        android:scrollbars="none"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.nitiaayog.apnesaathi.base.CircleImageView
                    android:id="@+id/civGender"
                    android:layout_width="@dimen/view_size_66"
                    android:layout_height="@dimen/view_size_66"
                    android:padding="@dimen/dimen_5"
                    android:src="@drawable/ic_male_user"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_28"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:minHeight="@dimen/dimen_28"
                    android:paddingStart="@dimen/dimen_3"
                    android:paddingEnd="0dp"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintEnd_toStartOf="@id/ivCall"
                    app:layout_constraintStart_toEndOf="@id/civGender"
                    app:layout_constraintTop_toTopOf="@id/civGender" />

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_28"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/text_12"
                    app:layout_constraintBottom_toBottomOf="@id/civGender"
                    app:layout_constraintEnd_toStartOf="@id/ivCall"
                    app:layout_constraintStart_toEndOf="@id/civGender"
                    app:layout_constraintTop_toBottomOf="@id/tvName" />

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="@dimen/view_size_36"
                    android:layout_height="@dimen/view_size_36"
                    android:background="?android:actionBarItemBackground"
                    android:contentDescription="@string/menu_calls"
                    android:src="@drawable/ic_call"
                    app:layout_constraintBottom_toBottomOf="@id/civGender"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/civGender" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_7"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color_1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/civGender" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvCallStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_3"
                android:layout_marginEnd="0dp"
                android:text="@string/call_status_1"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintLayoutHeader"
                app:layout_goneMarginTop="@dimen/dimen_10" />

            <LinearLayout
                android:id="@+id/llCallStatusLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginEnd="@dimen/dimen_15"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCallStatus">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNoResponse"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no_response"
                    android:textAllCaps="false"
                    android:textColor="@color/color_dark_grey_txt"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_12"
                    app:strokeColor="@color/color_dark_grey_txt" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNotPicked"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:layout_weight="1"
                    android:text="@string/not_picked"
                    android:textAllCaps="false"
                    android:textColor="@color/color_dark_grey_txt"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_12"
                    app:strokeColor="@color/color_dark_grey_txt" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNotReachable"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:layout_weight="1"
                    android:text="@string/not_reachable"
                    android:textAllCaps="false"
                    android:textColor="@color/color_dark_grey_txt"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_12"
                    app:strokeColor="@color/color_dark_grey_txt" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCallStatusLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginEnd="@dimen/dimen_15"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llCallStatusLayout1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDisConnected"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dis_connected"
                    android:textAllCaps="false"
                    android:textColor="@color/color_dark_grey_txt"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_12"
                    app:strokeColor="@color/color_dark_grey_txt" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConnected"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:text="@string/connected"
                    android:textAllCaps="false"
                    android:textColor="@color/color_dark_grey_txt"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_12"
                    app:strokeColor="@color/color_dark_grey_txt" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTalkWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="0dp"
                android:text="@string/whom_did_you_talk_with"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llCallStatusLayout2" />

            <AutoCompleteTextView
                android:id="@+id/actTalkWith"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_48"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginEnd="@dimen/dimen_15"
                android:background="@drawable/bg_rectangle_border_form"
                android:completionThreshold="0"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:focusable="false"
                android:hint="@string/talked_with"
                android:inputType="none|textNoSuggestions"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:textColor="@color/color_dark_grey_txt"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTalkWith" />

            <TextView
                android:id="@+id/tvAnySrCitizenInHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="0dp"
                android:text="@string/any_sr_citizen_in_home"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actTalkWith" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnySrCitizenInHomeYes"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/gray_background"
                android:visibility="gone"
                app:cornerRadius="@dimen/dimen_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAnySrCitizenInHome"
                app:strokeColor="@color/light_gray_orange_stroke_selector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnySrCitizenInHomeNo"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/gray_background"
                android:textIsSelectable="false"
                android:visibility="gone"
                app:cornerRadius="@dimen/dimen_3"
                app:layout_constraintStart_toEndOf="@id/btnAnySrCitizenInHomeYes"
                app:layout_constraintTop_toBottomOf="@id/tvAnySrCitizenInHome"
                app:strokeColor="@color/light_gray_orange_stroke_selector" />

            <TextView
                android:id="@+id/tvNewSrCitizenPersonalDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dimen_35"
                android:paddingStart="@dimen/dimen_15"
                android:paddingEnd="0dp"
                android:text="@string/new_sr_citizen_personal_details"
                android:textAllCaps="false"
                android:textSize="@dimen/text_14"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnAnySrCitizenInHomeNo" />

            <include
                android:id="@+id/registerNewSrCitizen"
                layout="@layout/include_register_new_sr_citizen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNewSrCitizenPersonalDetails" />

            <TextView
                android:id="@+id/tvMedicalDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dimen_35"
                android:paddingStart="@dimen/dimen_15"
                android:paddingEnd="0dp"
                android:text="@string/medical_details"
                android:textAllCaps="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actTalkWith" />

            <TextView
                android:id="@+id/tvMedicalHistorySrCitizen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="0dp"
                android:text="@string/medical_history_sr_citizen"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMedicalDetails" />

            <MultiAutoCompleteTextView
                android:id="@+id/actMedicalHistorySrCitizen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_48"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginEnd="@dimen/dimen_15"
                android:background="@drawable/bg_rectangle_border_form"
                android:completionThreshold="0"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="@dimen/dimen_5"
                android:focusable="false"
                android:hint="@string/medical_history"
                android:inputType="none|textNoSuggestions"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:textColor="@color/color_dark_grey_txt"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMedicalHistorySrCitizen" />

            <TextView
                android:id="@+id/tvInfoYouTalkedAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="0dp"
                android:text="@string/info_you_talked_about"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actMedicalHistorySrCitizen" />

            <HorizontalScrollView
                android:id="@+id/hsvInfoYouTalkedAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:clipToPadding="false"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:scrollbars="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvInfoYouTalkedAbout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrevention"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prevention"
                        android:textAllCaps="false"
                        android:textColor="@color/color_dark_grey_txt"
                        android:textIsSelectable="false"
                        app:cornerRadius="@dimen/dimen_15"
                        app:iconGravity="textEnd"
                        app:iconPadding="@dimen/dimen_3"
                        app:iconTint="@color/color_orange"
                        app:strokeColor="@color/color_dark_grey_txt" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAccess"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15"
                        android:layout_marginEnd="@dimen/dimen_15"
                        android:text="@string/access"
                        android:textAllCaps="false"
                        android:textColor="@color/color_dark_grey_txt"
                        android:textIsSelectable="false"
                        app:cornerRadius="@dimen/dimen_15"
                        app:iconGravity="textEnd"
                        app:iconPadding="@dimen/dimen_3"
                        app:iconTint="@color/color_orange"
                        app:strokeColor="@color/color_dark_grey_txt" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDetection"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detection"
                        android:textAllCaps="false"
                        android:textColor="@color/color_dark_grey_txt"
                        android:textIsSelectable="false"
                        app:cornerRadius="@dimen/dimen_15"
                        app:iconGravity="textEnd"
                        app:iconPadding="@dimen/dimen_3"
                        app:iconTint="@color/color_orange"
                        app:strokeColor="@color/color_dark_grey_txt" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvBehaviorChangePractical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="@dimen/dimen_15"
                android:text="@string/behavior_change_practice"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hsvInfoYouTalkedAbout" />

            <AutoCompleteTextView
                android:id="@+id/actBehaviorChange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_48"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginEnd="@dimen/dimen_15"
                android:background="@drawable/bg_rectangle_border_form"
                android:completionThreshold="0"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:focusable="false"
                android:hint="@string/medical_history"
                android:inputType="none|textNoSuggestions"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:textColor="@color/color_dark_grey_txt"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBehaviorChangePractical" />

            <TextView
                android:id="@+id/tvOtherMedicalProblems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="0dp"
                android:text="@string/other_medical_problems"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actBehaviorChange" />

            <AutoCompleteTextView
                android:id="@+id/actOtherMedicalProblems"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_48"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginEnd="@dimen/dimen_15"
                android:background="@drawable/bg_rectangle_border_form"
                android:completionThreshold="0"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:focusable="false"
                android:hint="@string/medical_problems"
                android:inputType="none|textNoSuggestions"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:textColor="@color/color_dark_grey_txt"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvOtherMedicalProblems" />

            <TextView
                android:id="@+id/tvCovidSymptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="0dp"
                android:text="@string/covid_symptoms"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_14"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actOtherMedicalProblems" />

            <LinearLayout
                android:id="@+id/llCough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_2"
                android:background="?selectableItemBackground"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCovidSymptoms">

                <ImageView
                    android:id="@+id/ivCough"
                    android:layout_width="@dimen/view_size_78"
                    android:layout_height="@dimen/view_size_78"
                    android:background="@drawable/bg_border_selector"
                    android:contentDescription="@string/cough"
                    android:padding="@dimen/dimen_7"
                    android:src="@drawable/bg_cough_selector" />

                <TextView
                    android:id="@+id/tvCough"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minLines="2"
                    android:text="@string/cough"
                    android:textAllCaps="false"
                    android:textColor="@color/color_dark_grey_txt"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_2"
                android:background="?selectableItemBackground"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/llCough"
                app:layout_constraintTop_toBottomOf="@id/tvCovidSymptoms">

                <ImageView
                    android:id="@+id/ivFever"
                    android:layout_width="@dimen/view_size_78"
                    android:layout_height="@dimen/view_size_78"
                    android:background="@drawable/bg_border_selector"
                    android:contentDescription="@string/cough"
                    android:padding="@dimen/dimen_7"
                    android:src="@drawable/bg_fever_selector" />

                <TextView
                    android:id="@+id/tvFever"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minLines="2"
                    android:text="@string/fever"
                    android:textAllCaps="false"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llShortOfBreath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
