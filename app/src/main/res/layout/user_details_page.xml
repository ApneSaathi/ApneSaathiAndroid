<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_personal_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_grey"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/view_size_40"
                android:layout_height="@dimen/view_size_40"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scott Osborne (60Y)" />

                <TextView
                    android:id="@+id/txt_user_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="96084309390" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_call_button"
                android:layout_width="@dimen/view_size_40"
                android:layout_height="@dimen/view_size_40"
                android:src="@drawable/ic_phone_icon" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:text="Address: 105, Singapore township, Block:3, Ghatkesar, Hyderabad" />
    </LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rcl_call_dates"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ll_personal_details_container"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcl_call_dates"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_13"
        android:paddingRight="@dimen/dimen_20"
        android:layout_height="wrap_content">
        <TextView
            android:text="Call Status:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <RadioGroup
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="Attended"
                android:button="@null"
                android:minWidth="105dp"
                android:minHeight="@dimen/view_size_36"
                android:checked="true"
                android:textColor="@drawable/radio_text"
                android:background="@drawable/bg_orange_selector"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton
                android:text="Not Attended"
                android:button="@null"
                android:textColor="@drawable/radio_text"
                android:minWidth="105dp"
                android:minHeight="@dimen/view_size_36"
                android:gravity="center"
                android:background="@drawable/bg_orange_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
        </RadioGroup>
        <TextView
            android:text="Covid Symptoms:"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>

        </LinearLayout>
        <TextView
            android:text="Other Medical Problems"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_width="match_parent"
            android:minHeight="@dimen/view_size_32"
            android:hint="Type here..."
            android:textColorHint="@color/color_grey_txt"
            android:background="@drawable/bg_rectangle_border_form"
            android:layout_height="wrap_content">
        </EditText>
        <TextView
            android:text="Grivence"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <RadioGroup
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="Yes"
                android:button="@null"
                android:minWidth="@dimen/view_size_60"
                android:minHeight="@dimen/view_size_36"
                android:checked="true"
                android:textColor="@drawable/radio_text"
                android:background="@drawable/bg_orange_selector"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton
                android:text="No"
                android:button="@null"
                android:textColor="@drawable/radio_text"
                android:minWidth="@dimen/view_size_60"
                android:minHeight="@dimen/view_size_36"
                android:gravity="center"
                android:background="@drawable/bg_orange_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:minHeight="@dimen/view_size_40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Save"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:gravity="center"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>