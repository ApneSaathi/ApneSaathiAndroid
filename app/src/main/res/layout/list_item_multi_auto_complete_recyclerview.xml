<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_5"
    android:background="@drawable/bg_background_stroke"
    android:paddingStart="@dimen/dimen_10"
    android:paddingEnd="@dimen/dimen_5">

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/background_light"
        android:gravity="center"
        android:minHeight="@dimen/view_size_36"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/dimen_5"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@color/color_dark_grey_txt"
        android:textSize="@dimen/text_14"
        app:cornerRadius="@dimen/dimen_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/actionBarItemBackground"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/dimen_2"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvItemName"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>